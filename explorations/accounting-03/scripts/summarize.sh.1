#!/usr/bin/env bash

mkdir -p exports/$1/summaries/

echo Summarizing $2 on $1 chain...

echo "recordId,assetAddr,blockNumber,transactionIndex,date,transactionHash,sender,recipient" \
    >exports/$1/summaries/$2.csv

cat exports/$1/statements/$2.json | jq \
    '.data[] | "\(.assetAddr),\(.blockNumber),\(.transactionIndex),\(.date),\(.transactionHash),\(.sender),\(.recipient)"' \
    | sed 's/"//g' \
    | grep -n 0x \
    | sed 's/:/,/' \
    >>exports/$1/summaries/$2.csv

../scripts/holders.sh $1 $2 $3